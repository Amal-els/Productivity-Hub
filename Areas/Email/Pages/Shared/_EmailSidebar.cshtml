<!-- Enhanced Email Sidebar -->
<style>
    .email-sidebar {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(0, 0, 0, 0.06);
        padding: 28px !important;
        min-width: 260px;
        animation: slideInLeft 0.5s ease-out;
    }

    @@keyframes slideInLeft {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .sidebar-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 28px;
        padding-bottom: 20px;
        border-bottom: 2px solid rgba(102, 126, 234, 0.1);
    }

    .sidebar-header-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 20px;
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .sidebar-header h4 {
        margin: 0;
        font-size: 20px;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .compose-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 14px;
        padding: 14px 20px;
        font-weight: 600;
        font-size: 15px;
        width: 100%;
        margin-bottom: 28px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        text-decoration: none;
    }

    .compose-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
        color: white;
    }

    .compose-btn:active {
        transform: translateY(0);
    }

    .compose-btn i {
        font-size: 18px;
        transition: transform 0.3s ease;
    }

    .compose-btn:hover i {
        transform: rotate(90deg);
    }

    .sidebar-nav {
        margin-bottom: 24px;
    }

    .sidebar-nav-item {
        margin-bottom: 6px;
    }

    .sidebar-nav-link {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        color: #64748b;
        text-decoration: none;
        border-radius: 12px;
        font-weight: 500;
        font-size: 14px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .sidebar-nav-link::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 4px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        transform: scaleY(0);
        transition: transform 0.3s ease;
        border-radius: 0 4px 4px 0;
    }

    .sidebar-nav-link:hover {
        background: rgba(102, 126, 234, 0.08);
        color: #667eea;
        transform: translateX(4px);
    }

    .sidebar-nav-link:hover::before {
        transform: scaleY(1);
    }

    .sidebar-nav-link.active {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.12) 0%, rgba(118, 75, 162, 0.12) 100%);
        color: #667eea;
        font-weight: 600;
        transform: translateX(4px);
    }

    .sidebar-nav-link.active::before {
        transform: scaleY(1);
    }

    .sidebar-nav-link i {
        font-size: 18px;
        transition: transform 0.3s ease;
        min-width: 20px;
    }

    .sidebar-nav-link:hover i,
    .sidebar-nav-link.active i {
        transform: scale(1.15);
    }

    .sidebar-divider {
        border: none;
        height: 2px;
        background: linear-gradient(90deg, 
            rgba(102, 126, 234, 0.1) 0%, 
            rgba(118, 75, 162, 0.1) 50%, 
            rgba(102, 126, 234, 0.1) 100%);
        margin: 24px 0;
    }

    .labels-section {
        margin-top: 24px;
    }

    .labels-header {
        font-size: 11px;
        font-weight: 700;
        color: #94a3b8;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 16px;
        padding-left: 4px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .labels-header::before {
        content: '';
        width: 20px;
        height: 2px;
        background: linear-gradient(90deg, #667eea, #764ba2);
        border-radius: 2px;
    }

    .label-item {
        margin-bottom: 4px;
    }

    .label-link {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 10px 12px;
        color: #64748b;
        text-decoration: none;
        border-radius: 10px;
        font-size: 13px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .label-link:hover {
        background: rgba(102, 126, 234, 0.05);
        color: #334155;
        transform: translateX(4px);
    }

    .label-badge {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        display: inline-block;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

    .label-link:hover .label-badge {
        transform: scale(1.3);
    }

    .label-badge.work {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .label-badge.personal {
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
    }

    .label-badge.important {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    }

    /* Scrollbar styling for sidebar */
    .email-sidebar::-webkit-scrollbar {
        width: 6px;
    }

    .email-sidebar::-webkit-scrollbar-track {
        background: rgba(0, 0, 0, 0.03);
        border-radius: 10px;
    }

    .email-sidebar::-webkit-scrollbar-thumb {
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-radius: 10px;
    }

    /* Responsive */
    @@media (max-width: 992px) {
        .email-sidebar {
            min-width: 100%;
            margin-bottom: 20px;
        }
    }

    @@media (max-width: 768px) {
        .sidebar-header h4 {
            font-size: 18px;
        }

        .sidebar-header-icon {
            width: 36px;
            height: 36px;
            font-size: 18px;
        }

        .compose-btn {
            padding: 12px 16px;
            font-size: 14px;
        }

        .sidebar-nav-link {
            padding: 10px 14px;
            font-size: 13px;
        }
    }
</style>

<!-- Sidebar Structure -->
<div class="email-sidebar">
   
    
    <a asp-page="/Compose" class="compose-btn">
        <i class="bi bi-plus-circle-fill"></i>
        <span>Compose</span>
    </a>
    
    <ul class="nav flex-column sidebar-nav">
        <li class="nav-item sidebar-nav-item">
            <a class="sidebar-nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Home/Index" ? "active" : "")" 
               asp-page="/Home/Index">
                <i class="bi bi-house-fill"></i>
                <span>Home</span>
            </a>
        </li>
        <li class="nav-item sidebar-nav-item">
            <a class="sidebar-nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Email/Index" ? "active" : "")" 
               asp-controller="Email" asp-action="Index">
                <i class="bi bi-inbox-fill"></i>
                <span>Inbox</span>
            </a>
        </li>
        <li class="nav-item sidebar-nav-item">
            <a class="sidebar-nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Email/Sent" ? "active" : "")" 
               asp-controller="Email" asp-action="Sent">
                <i class="bi bi-send-fill"></i>
                <span>Sent</span>
            </a>
        </li>
        
        
    </ul>
    
    <hr class="sidebar-divider" />
    
    <div class="labels-section">
        <div class="labels-header">
            Labels
        </div>
        <ul class="nav flex-column">
            <li class="nav-item label-item">
                <a class="label-link" href="#">
                    <span class="label-badge work"></span>
                    <span>Work</span>
                </a>
            </li>
            <li class="nav-item label-item">
                <a class="label-link" href="#">
                    <span class="label-badge personal"></span>
                    <span>Personal</span>
                </a>
            </li>
            <li class="nav-item label-item">
                <a class="label-link" href="#">
                    <span class="label-badge important"></span>
                    <span>Important</span>
                </a>
            </li>
        </ul>
    </div>
</div>
