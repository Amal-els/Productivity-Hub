@page
@model TeamProject.Areas.Email.Pages.InboxModel
@{
    ViewData["Title"] = "Inbox";
    Layout = "_EmailLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="bi bi-inbox"></i> Inbox
        @if (Model.Messages != null && Model.Messages.Any())
        {
            <span class="badge bg-primary">@Model.Messages.Count</span>
        }
    </h2>
    <div>
        <button class="btn btn-outline-secondary btn-sm" onclick="location.reload()">
            <i class="bi bi-arrow-clockwise"></i> Refresh
        </button>
    </div>
</div>

@if (Model.Messages != null && Model.Messages.Any())
{
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>From</th>
                        <th>Subject</th>
                        <th>Date</th>
                        <th style="width: 150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var message in Model.Messages)
                    {
                        <partial name="Shared/_EmailPartial" model="message" />
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <h4 class="mt-3 text-muted">No messages in inbox</h4>
            <p class="text-muted">Your inbox is empty!</p>
        </div>
    </div>
}