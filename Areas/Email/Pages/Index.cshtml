@page
@model TeamProject.Areas.Email.Pages.IndexModel
@{
    ViewData["Title"] = "Email Dashboard";
    Layout = "_EmailLayout";
}

 <div class="title container-fluid mt-4 mb-3">   
</div>
<div class="container-fluid min-vh-100 d-flex">



    <!-- Main Content -->
    <div class="flex-grow-1 p-3">

        <div class="row">
            <!-- Inbox Card -->
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">
                                <i class="bi bi-inbox text-primary"></i> Inbox
                            </h5>
                            <p class="card-text text-muted">Unread messages</p>
                        </div>
                        <div>
                            <h2 class="text-primary">@Model.UnreadCount</h2>
                        </div>
                    </div>
                    <a asp-page="/Email/Inbox" class="btn btn-outline-primary btn-sm mt-2">
                        View Inbox
                    </a>
                </div>
            </div>

            <!-- Sent Card -->
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">
                                <i class="bi bi-send text-success"></i> Sent
                            </h5>
                            <p class="card-text text-muted">Messages sent today</p>
                        </div>
                        <div>
                            <h2 class="text-success">@Model.SentTodayCount</h2>
                        </div>
                    </div>
                    <a asp-page="/Email/Sent" class="btn btn-outline-success btn-sm mt-2">
                        View Sent
                    </a>
                </div>
            </div>

            <!-- Compose Card -->
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">
                                <i class="bi bi-pencil-square text-info"></i> Compose
                            </h5>
                            <p class="card-text text-muted">New message</p>
                        </div>
                        <div>
                            <i class="bi bi-envelope-plus display-4 text-info"></i>
                        </div>
                    </div>
                    <a asp-area="Email" asp-page="/Compose" class="btn btn-outline-info btn-sm mt-2">
                        Compose Email
                    </a>
                </div>
            </div>
        </div>

        <!-- Recent Emails -->
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-white">
                <h5 class="mb-0">Recent Emails</h5>
            </div>
            <div class="card-body p-0">
                @if (Model.RecentMessages != null && Model.RecentMessages.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>From</th>
                                    <th>Subject</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var message in Model.RecentMessages.Take(10))
                                {
                                    <partial name="Shared/_EmailPartial" model="message" />
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-inbox display-1"></i>
                        <p class="mt-3">No recent emails</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
