@page
@model TeamProject.Areas.Email.Pages.SentModel
@{
    ViewData["Title"] = "Sent";
}

<h2>
    <i class="bi bi-send"></i> Sent Messages
    @if (Model.Messages != null && Model.Messages.Any())
    {
        <span class="badge bg-success">@Model.Messages.Count</span>
    }
</h2>

<div class="alert alert-info mt-3" role="alert">
    <i class="bi bi-info-circle"></i> Sent folder functionality coming soon!
</div>