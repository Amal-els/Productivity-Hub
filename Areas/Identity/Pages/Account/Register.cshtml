@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = "_GuestLayout";
}

<div class="container py-5">
    <div class="row justify-content-center min-vh-100 align-items-center">
        <div class="col-lg-11 col-xl-10">
            <!-- Header Section -->
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold mb-3">Create Your Account</h1>
                <p class="text-muted fs-5">Join thousands of users and get started in minutes</p>
            </div>

            <div class="row justify-content-center">
                <!-- Registration Form -->
                <div class="col-12 col-md-10 col-lg-20 col-xl-15">
                    <div class="card shadow-lg border-0 rounded-4">
                        <div class="card-body p-5 p-md-6">
                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

                                <div class="row g-4 mb-4">
                                    <div class="col-sm-6">
                                        <div class="form-floating">
                                            <input asp-for="Input.FirstName"
                                                   class="form-control rounded-3"
                                                   autocomplete="given-name"
                                                   aria-required="true"
                                                   placeholder="First Name" />
                                            <label asp-for="Input.FirstName">First Name</label>
                                            <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="form-floating">
                                            <input asp-for="Input.LastName"
                                                   class="form-control rounded-3"
                                                   autocomplete="family-name"
                                                   aria-required="true"
                                                   placeholder="Last Name" />
                                            <label asp-for="Input.LastName">Last Name</label>
                                            <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-floating mb-4">
                                    <input asp-for="Input.Email"
                                           class="form-control rounded-3"
                                           autocomplete="username"
                                           aria-required="true"
                                           placeholder="name@example.com"
                                           type="email" />
                                    <label asp-for="Input.Email">Email Address</label>
                                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Password"
                                           class="form-control rounded-3"
                                           autocomplete="new-password"
                                           aria-required="true"
                                           placeholder="password"
                                           type="password" />
                                    <label asp-for="Input.Password">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                </div>
                                <div class="mb-4">
                                    <small class="text-muted d-block ps-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="me-1" viewBox="0 0 16 16">
                                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                            <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                                        </svg>
                                        Use at least 8 characters with letters, numbers & symbols
                                    </small>
                                </div>

                                <div class="form-floating mb-5">
                                    <input asp-for="Input.ConfirmPassword"
                                           class="form-control rounded-3"
                                           autocomplete="new-password"
                                           aria-required="true"
                                           placeholder="password"
                                           type="password" />
                                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                                </div>

                                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary rounded-3 mb-4 py-3 fw-semibold">
                                    Create Account
                                </button>

                                <div class="text-center">
                                    <p class="text-muted small mb-0">
                                        Already have an account?
                                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-semibold text-primary">
                                            Sign in here
                                        </a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer Terms -->
            <div class="text-center mt-5">
                <p class="small text-muted">
                    By creating an account, you agree to our
                    <a href="#" class="text-decoration-none text-primary">Terms of Service</a> and
                    <a href="#" class="text-decoration-none text-primary">Privacy Policy</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
