@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_GuestLayout";
}

<div class="container py-5">
    <div class="row justify-content-center min-vh-100 align-items-center">
        <div class="col-lg-11 col-xl-10">
            <!-- Header Section -->
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold mb-3">Welcome Back</h1>
                <p class="text-muted fs-5">Sign in to your account to continue</p>
            </div>

            <div class="row justify-content-center">
                <!-- Login Form -->
                <div class="col-12 col-md-10 col-lg-20 col-xl-15">
                    <div class="card shadow-lg border-0 rounded-4">
                        <div class="card-body p-5 p-md-6">
                            <form id="account" method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

                                <div class="form-floating mb-4">
                                    <input asp-for="Input.Email"
                                           class="form-control rounded-3"
                                           autocomplete="username"
                                           aria-required="true"
                                           placeholder="name@example.com"
                                           type="email"
                                           autofocus />
                                    <label asp-for="Input.Email">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-1" viewBox="0 0 16 16">
                                            <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555ZM0 4.697v7.104l5.803-3.558L0 4.697ZM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757Zm3.436-.586L16 11.801V4.697l-5.803 3.546Z" />
                                        </svg>
                                        Email Address
                                    </label>
                                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-4">
                                    <input asp-for="Input.Password"
                                           class="form-control rounded-3"
                                           autocomplete="current-password"
                                           aria-required="true"
                                           placeholder="password"
                                           type="password" />
                                    <label asp-for="Input.Password">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-1" viewBox="0 0 16 16">
                                            <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z" />
                                        </svg>
                                        Password
                                    </label>
                                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-5">
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               asp-for="Input.RememberMe"
                                               type="checkbox" />
                                        <label class="form-check-label small" asp-for="Input.RememberMe">
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                    <a id="forgot-password"
                                       asp-page="./ForgotPassword"
                                       class="text-decoration-none small fw-semibold text-primary">
                                        Forgot password?
                                    </a>
                                </div>

                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary rounded-3 mb-5 py-3 fw-semibold">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="me-2" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
                                        <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                                    </svg>
                                    Sign In
                                </button>

                                <div class="text-center border-top pt-4">
                                    <p class="text-muted small mb-3">
                                        Don't have an account?
                                        <a asp-page="./Register"
                                           asp-route-returnUrl="@Model.ReturnUrl"
                                           class="text-decoration-none fw-semibold text-primary">
                                            Create one now
                                        </a>
                                    </p>
                                    <p class="text-muted small mb-0">
                                        <a id="resend-confirmation"
                                           asp-page="./ResendEmailConfirmation"
                                           class="text-decoration-none text-secondary">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="me-1" viewBox="0 0 16 16">
                                                <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555ZM0 4.697v7.104l5.803-3.558L0 4.697ZM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757Zm3.436-.586L16 11.801V4.697l-5.803 3.546Z" />
                                            </svg>
                                            Resend email confirmation
                                        </a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer Links -->
            <div class="text-center mt-5">
                <p class="small text-muted">
                    Need help?
                    <a href="#" class="text-decoration-none text-primary">Contact Support</a>
                    <span class="mx-2">•</span>
                    <a href="#" class="text-decoration-none text-primary">Privacy Policy</a>
                    <span class="mx-2">•</span>
                    <a href="#" class="text-decoration-none text-primary">Terms of Service</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




