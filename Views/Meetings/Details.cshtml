@model TeamProject.ViewModels.MeetingInvitationViewModel
@{
    Layout = "~/Views/Shared/_ProductivityLayout.cshtml";
    ViewData["Title"] = "Meeting Details";
    var isOrganizer = User.Identity.Name == Model.OrganizerEmail;
}

@section Styles {
    <style>
        .meeting-container {
            max-width: 1000px;
            margin: 0 auto;
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: #667eea;
            text-decoration: none;
            font-weight: 500;
            margin-bottom: 24px;
            transition: all 0.3s ease;
        }

            .back-link:hover {
                gap: 12px;
            }

        .meeting-card {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        .meeting-header {
            background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
            padding: 40px;
            color: white;
            position: relative;
            overflow: hidden;
        }

            .meeting-header::before {
                content: '👥';
                position: absolute;
                right: 20px;
                top: 20px;
                font-size: 120px;
                opacity: 0.1;
            }

        .meeting-badge {
            display: inline-block;
            padding: 6px 16px;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            font-size: 13px;
            font-weight: 500;
            margin-bottom: 16px;
        }

        .meeting-title {
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 16px;
            line-height: 1.2;
        }

        .meeting-meta {
            display: flex;
            gap: 24px;
            flex-wrap: wrap;
            opacity: 0.95;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 15px;
        }

        .meeting-body {
            padding: 40px;
        }

        .detail-section {
            margin-bottom: 32px;
        }

        .section-title {
            font-size: 18px;
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 16px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .detail-content {
            font-size: 16px;
            color: #475569;
            line-height: 1.6;
            white-space: pre-wrap;
        }

        .info-card {
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            border-radius: 12px;
            padding: 24px;
            border-left: 4px solid #667eea;
        }

        .info-row {
            display: flex;
            align-items: start;
            gap: 12px;
            margin-bottom: 16px;
        }

            .info-row:last-child {
                margin-bottom: 0;
            }

        .info-icon {
            width: 24px;
            height: 24px;
            color: #667eea;
            flex-shrink: 0;
            margin-top: 2px;
        }

        .info-content {
            flex: 1;
        }

        .info-label {
            font-size: 13px;
            color: #64748b;
            font-weight: 500;
            margin-bottom: 4px;
        }

        .info-value {
            font-size: 15px;
            color: #1e293b;
            font-weight: 500;
        }

        .meeting-link-box {
            background: #f0f9ff;
            border: 2px solid #bae6fd;
            border-radius: 12px;
            padding: 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 16px;
        }

        .link-content {
            flex: 1;
            overflow: hidden;
        }

        .link-label {
            font-size: 13px;
            color: #0369a1;
            font-weight: 500;
            margin-bottom: 6px;
        }

        .link-url {
            color: #0284c7;
            font-size: 15px;
            word-break: break-all;
        }

        .btn-copy {
            padding: 10px 20px;
            background: #0ea5e9;
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            white-space: nowrap;
        }

            .btn-copy:hover {
                background: #0284c7;
            }

        .organizer-card {
            display: flex;
            align-items: center;
            gap: 16px;
            padding: 20px;
            background: white;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
        }

        .organizer-avatar {
            width: 56px;
            height: 56px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            font-weight: 600;
            color: white;
        }

        .organizer-info {
            flex: 1;
        }

        .organizer-name {
            font-size: 16px;
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 4px;
        }

        .organizer-email {
            font-size: 14px;
            color: #64748b;
        }

        .participants-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 16px;
        }

        .participant-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 16px;
            background: white;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            transition: all 0.3s ease;
        }

            .participant-item:hover {
                border-color: #cbd5e1;
                transform: translateY(-2px);
            }

        .participant-avatar {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #94a3b8 0%, #64748b 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 16px;
            font-weight: 600;
            color: white;
            flex-shrink: 0;
        }

        .participant-info {
            flex: 1;
            min-width: 0;
        }

        .participant-name {
            font-size: 14px;
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 2px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .participant-email {
            font-size: 12px;
            color: #64748b;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .response-badge {
            padding: 4px 10px;
            border-radius: 12px;
            font-size: 11px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            flex-shrink: 0;
        }

        .badge-accepted {
            background: #d1fae5;
            color: #065f46;
        }

        .badge-declined {
            background: #fee2e2;
            color: #991b1b;
        }

        .badge-tentative {
            background: #fef3c7;
            color: #92400e;
        }

        .badge-pending {
            background: #e0e7ff;
            color: #3730a3;
        }

        .response-section {
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            border-radius: 12px;
            padding: 32px;
            text-align: center;
            border: 2px solid #fbbf24;
        }

        .response-title {
            font-size: 20px;
            font-weight: 700;
            color: #92400e;
            margin-bottom: 12px;
        }

        .response-subtitle {
            font-size: 15px;
            color: #78350f;
            margin-bottom: 24px;
        }

        .response-buttons {
            display: flex;
            gap: 12px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn {
            padding: 12px 24px;
            border-radius: 8px;
            font-weight: 500;
            cursor: pointer;
            border: none;
            font-size: 15px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-accept {
            background: #10b981;
            color: white;
        }

            .btn-accept:hover {
                background: #059669;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(16, 185, 129, 0.4);
            }

        .btn-tentative {
            background: #f59e0b;
            color: white;
        }

            .btn-tentative:hover {
                background: #d97706;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(245, 158, 11, 0.4);
            }

        .btn-decline {
            background: #ef4444;
            color: white;
        }

            .btn-decline:hover {
                background: #dc2626;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4);
            }

        .current-response {
            background: white;
            border-radius: 12px;
            padding: 20px;
            text-align: center;
            border: 2px solid #e2e8f0;
        }

        .current-response-text {
            font-size: 15px;
            color: #64748b;
            margin-bottom: 12px;
        }

        .current-response-badge {
            display: inline-block;
            padding: 8px 20px;
            border-radius: 20px;
            font-size: 15px;
            font-weight: 600;
        }

        .meeting-actions {
            display: flex;
            gap: 12px;
            padding: 24px 40px;
            background: #f8fafc;
            border-top: 1px solid #e2e8f0;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
            }

        .btn-secondary {
            background: white;
            color: #475569;
            border: 2px solid #e2e8f0;
        }

            .btn-secondary:hover {
                background: #f8fafc;
            }

        @@media (max-width: 768px) {
            .meeting-header

        {
            padding: 24px;
        }

        .meeting-title {
            font-size: 24px;
        }

        .meeting-meta {
            flex-direction: column;
            gap: 12px;
        }

        .meeting-body {
            padding: 24px;
        }

        .participants-list {
            grid-template-columns: 1fr;
        }

        .response-buttons {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }

        .meeting-actions {
            flex-direction: column;
            padding: 16px 24px;
        }

        .meeting-link-box {
            flex-direction: column;
        }

        }
    </style>
}

<div class="meeting-container">
    <a href="@Url.Action("Index", "Calendar")" class="back-link">
        <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Calendar
    </a>

    <div class="meeting-card">
        <div class="meeting-header">
            <div class="meeting-badge">Meeting Invitation</div>
            <h1 class="meeting-title">@Model.Title</h1>
            <div class="meeting-meta">
                <div class="meta-item">
                    <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    @if (Model.StartTime.Date == Model.EndTime.Date)
                    {
                        <span>@Model.StartTime.ToString("dddd, MMMM dd, yyyy")</span>
                    }
                    else
                    {
                        <span>@Model.StartTime.ToString("MMM dd, yyyy") - @Model.EndTime.ToString("MMM dd, yyyy")</span>
                    }
                </div>
                <div class="meta-item">
                    <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    @Model.StartTime.ToString("h:mm tt") - @Model.EndTime.ToString("h:mm tt")
                </div>
                @if (!string.IsNullOrWhiteSpace(Model.Location))
                {
                    <div class="meta-item">
                        <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        </svg>
                        @Model.Location
                    </div>
                }
            </div>
        </div>

        <div class="meeting-body">
            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <div class="detail-section">
                    <h3 class="section-title">
                        <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M4 6h16M4 12h16M4 18h7" />
                        </svg>
                        Description
                    </h3>
                    <div class="detail-content">@Model.Description</div>
                </div>
            }

            @if (!string.IsNullOrWhiteSpace(Model.MeetingLink))
            {
                <div class="detail-section">
                    <h3 class="section-title">
                        <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                        </svg>
                        Join Meeting
                    </h3>
                    <div class="meeting-link-box">
                        <div class="link-content">
                            <div class="link-label">Meeting Link</div>
                            <a href="@Model.MeetingLink" target="_blank" class="link-url">@Model.MeetingLink</a>
                        </div>
                        <button class="btn-copy" onclick="copyLink('@Model.MeetingLink')">
                            📋 Copy
                        </button>
                    </div>
                </div>
            }

            <div class="detail-section">
                <h3 class="section-title">
                    <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                    Organized by
                </h3>
                <div class="organizer-card">
                    <div class="organizer-avatar">
                        @Model.OrganizerName.Substring(0, 1).ToUpper()
                    </div>
                    <div class="organizer-info">
                        <div class="organizer-name">@Model.OrganizerName</div>
                        <div class="organizer-email">@Model.OrganizerEmail</div>
                    </div>
                </div>
            </div>

            <div class="detail-section">
                <h3 class="section-title">
                    <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    Participants (@Model.Participants.Count)
                </h3>
                <div class="participants-list">
                    @foreach (var participant in Model.Participants)
                    {
                        <div class="participant-item">
                            <div class="participant-avatar">
                                @participant.Name.Substring(0, 1).ToUpper()
                            </div>
                            <div class="participant-info">
                                <div class="participant-name">@participant.Name</div>
                                <div class="participant-email">@participant.Email</div>
                            </div>
                            <span class="response-badge badge-@participant.ResponseStatus.ToLower()">
                                @participant.ResponseStatus
                            </span>
                        </div>
                    }
                </div>
            </div>

            @if (!isOrganizer && !string.IsNullOrWhiteSpace(Model.CurrentResponseStatus))
            {
                @if (Model.CurrentResponseStatus == "Pending")
                {
                    <div class="detail-section">
                        <div class="response-section">
                            <h3 class="response-title">Will you attend this meeting?</h3>
                            <p class="response-subtitle">Please respond to the meeting invitation</p>
                            <div class="response-buttons">
                                <a href="@Url.Action("RespondToInvitation", "Calendar", new { id = Model.EventId, response = "Accepted" })"
                                   class="btn btn-accept">
                                    ✓ Accept
                                </a>
                                <a href="@Url.Action("RespondToInvitation", "Calendar", new { id = Model.EventId, response = "Tentative" })"
                                   class="btn btn-tentative">
                                    ? Tentative
                                </a>
                                <a href="@Url.Action("RespondToInvitation", "Calendar", new { id = Model.EventId, response = "Declined" })"
                                   class="btn btn-decline">
                                    ✗ Decline
                                </a>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="detail-section">
                        <div class="current-response">
                            <p class="current-response-text">Your Response</p>
                            <span class="current-response-badge response-badge badge-@Model.CurrentResponseStatus.ToLower()">
                                @Model.CurrentResponseStatus
                            </span>
                        </div>
                    </div>
                }
            }
        </div>

        @if (isOrganizer)
        {
            <div class="meeting-actions">
                <a asp-action="Edit" asp-controller="Calendar" asp-route-id="@Model.EventId" class="btn btn-primary">
                    <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                    Edit Meeting
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function copyLink(link) {
            navigator.clipboard.writeText(link).then(function() {
                // Show success feedback
                const btn = event.target;
                const originalText = btn.innerHTML;
                btn.innerHTML = '✓ Copied!';
                btn.style.background = '#10b981';

                setTimeout(() => {
                    btn.innerHTML = originalText;
                    btn.style.background = '#0ea5e9';
                }, 2000);
            });
        }
    </script>
}