@model TeamProject.Models.toDoTask

@{
    ViewData["Title"] = "Modifier la Tâche";
    Layout = "_todolistmother";
}

<div class="todo-section p-4">
    <div class="add-task-bar shadow-sm p-3 mb-4 bg-white rounded-4">
        <h3 class="mb-3">Modifier la Tâche</h3>

        <form asp-action="Edit" asp-controller="toDoTask" asp-route-id="@Model.Id" method="post">
            @Html.AntiForgeryToken()
            
            <!-- Hidden fields -->
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="dateOfCreation" />

            <!-- Nom de la Tâche -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Nom de la Tâche</label>
                <input asp-for="Name" class="form-control" placeholder="Nom de la tâche..." required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Description -->
          

            <div class="row">
                <div class="col-md-6">
                    <!-- Priorité -->
                    <div class="mb-3">
                        <label asp-for="Priority" class="form-label">Priorité</label>
                        <select asp-for="Priority" class="form-select">
                            <option value="@((int)Priority.low)">Faible Priorité</option>
                            <option value="@((int)Priority.medium)">Priorité Moyenne</option>
                            <option value="@((int)Priority.high)">Haute Priorité</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-6">
                    <!-- Date de Complétion -->
                    <div class="mb-3">
                        <label asp-for="dateOfCompletion" class="form-label">Date d'Échéance</label>
                        <input asp-for="dateOfCompletion" type="date" class="form-control" />
                    </div>
                </div>
            </div>
            

            <div class="d-flex gap-2 mt-4">
                <button type='submit' class="btn btn-primary px-4">
                    <i class="bi bi-x-circle"></i> Save changes
                </button>
                <a asp-controller="toDoList" asp-action="getList" class="btn btn-secondary px-4">
                    <i class="bi bi-x-circle"></i> Annuler
                </a>
            </div>
        </form>
    </div>
</div>




<style>
    .bg-soft-warning { background: #fffbeb; color: #d97706; }
    .custom-cb { width: 22px; height: 22px; border-radius: 6px; border: 2px solid #667eea; }
    .row-completed { opacity: 0.6; background-color: #f8fafc; }
</style>